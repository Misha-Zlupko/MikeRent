generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ApartmentType {
  APARTMENT
  HOUSE
  ROOM
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Apartment {
  id            String        @id @default(cuid())
  title         String
  type          ApartmentType

  city          String
  address       String

  pricePerNight Int

  guests        Int
  bedrooms      Int
  beds          Int
  bathrooms     Int

  images        String[]
  rating        Float
  reviewsCount  Int
  description   String
  mapUrl        String
  amenities     String[]


  availability  Json?      
  bookings      Booking[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

// Соответствует booked[] внутри availability
model Booking {
  id          String    @id @default(cuid())
  apartment   Apartment @relation(fields: [apartmentId], references: [id], onDelete: Cascade)
  apartmentId String

  // Дати бронювання
  dateFrom    DateTime
  dateTo      DateTime

  // Інформація про клієнта
  guestName   String?   // ім'я клієнта
  guestPhone  String?   // номер телефону
  guestCount  Int?      // кількість людей
  guestContact String?  // telegram/viber/whatsapp

  // Фінанси
  totalAmount Float?    // сума, яку заплатив клієнт
  ownerPayout Float?    // скільки віддати хазяїну
  ourProfit   Float?    // наш заробіток (totalAmount - ownerPayout)
  ownerPhone  String?   // номер хазяїна для зв'язку

  // Службова інформація
  createdAt   DateTime  @default(now())
  status      BookingStatus @default(PENDING)

  @@map("bookings")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

// Отзывы на главной — по твоему Comment из CommentsDataTypes.ts
model Testimonial {
  id      String   @id @default(cuid())
  name    String
  text    String
  avatar  String
  date    DateTime // можно хранить как дату, даже если сейчас у тебя строка

  createdAt DateTime @default(now())
}